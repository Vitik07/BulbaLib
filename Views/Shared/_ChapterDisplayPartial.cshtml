@model BulbaLib.Models.Chapter

@if (Model == null)
{
    <p>Нет данных для отображения.</p>
    return;
}

<dl class="row">
    <dt class="col-sm-4">ID Главы:</dt>
    <dd class="col-sm-8">@Model.Id</dd>

    <dt class="col-sm-4">ID Новеллы:</dt>
    <dd class="col-sm-8">@Model.NovelId</dd>

    <dt class="col-sm-4">Номер главы:</dt>
    <dd class="col-sm-8">@Model.Number</dd>

    <dt class="col-sm-4">Название главы:</dt>
    <dd class="col-sm-8">@Model.Title</dd>

    <dt class="col-sm-4">ID Создателя:</dt>
    <dd class="col-sm-8">@(Model.CreatorId.HasValue ? Model.CreatorId.Value.ToString() : "Не указан")</dd>

    <dt class="col-sm-4">Дата добавления/обновления:</dt>
    <dd class="col-sm-8">@DateTimeOffset.FromUnixTimeSeconds(Model.Date).ToString("yyyy-MM-dd HH:mm:ss")</dd>

    <dt class="col-sm-12">Содержимое главы (предпросмотр):</dt>
    <dd class="col-sm-12">
        <div style="max-height: 300px; overflow-y: auto; border: 1px solid #eee; padding: 10px; background-color: #f9f9f9;">
            <pre style="white-space: pre-wrap; font-family: inherit;">@Model.Content</pre>
        </div>
    </dd>
</dl>
