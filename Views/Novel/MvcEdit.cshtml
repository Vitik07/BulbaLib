@model BulbaLib.Models.NovelEditModel
@{
    ViewData["Title"] = "Добавить новеллу (MVC)";
    // Assuming a layout file exists. If not, basic HTML structure would be needed.
    // Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8">
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AlternativeTitles" class="control-label"></label>
                <textarea asp-for="AlternativeTitles" class="form-control" rows="2" placeholder="Каждое название с новой строки"></textarea>
                <span asp-validation-for="AlternativeTitles" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="NewCovers" class="control-label">Обложки</label>
                <input asp-for="NewCovers" type="file" class="form-control" multiple />
                <span asp-validation-for="NewCovers" class="text-danger"></span>
                <small class="form-text text-muted">Можно выбрать несколько файлов.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Genres" class="control-label"></label>
                <input asp-for="Genres" class="form-control" placeholder="Жанр1, Жанр2" />
                <span asp-validation-for="Genres" class="text-danger"></span>
                <small class="form-text text-muted">Жанры через запятую.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" placeholder="Тег1, Тег2" />
                <span asp-validation-for="Tags" class="text-danger"></span>
                <small class="form-text text-muted">Теги через запятую.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Format" class="control-label"></label>
                <input asp-for="Format" class="form-control" />
                <span asp-validation-for="Format" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" type="number" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RelatedNovelIds" class="control-label"></label>
                <input asp-for="RelatedNovelIds" class="form-control" placeholder="ID1, ID2, ID3" />
                <span asp-validation-for="RelatedNovelIds" class="text-danger"></span>
                <small class="form-text text-muted">ID связанных новелл через запятую.</small>
            </div>

            @if (User.IsInRole("Author"))
            {
                <div class="form-group form-check mb-3">
                    <input type="checkbox" class="form-check-input" asp-for="IsDraft" />
                    <label class="form-check-label" asp-for="IsDraft">Сохранить как черновик</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Отправить</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Отмена</a> @* Assuming Home/Index for cancel *@
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
